page{
  background: rgb(244, 241, 240)
}

.product{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
  background: #fff;
}
.productheader{
  padding: 40rpx 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(231, 231, 231)
}
.productheader_left{
  display: flex;
  align-items: center;
}
.productheader_left>image{
  flex-shrink: 0
}
.productheader_left>.avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.productheader_left>text{
  color: rgb(51, 51, 51);
  font-size: 28rpx;
  margin: 0 26rpx 0 16rpx
}
.productheader_left>.certification{
  width: 56rpx;
  height: 40rpx;
  margin-right: 16rpx
}
.productheader_left>.member{
  width: 24rpx;
  height: 20rpx
}

.pricecollectwrap{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.price{
  color: rgb(223, 37, 12);
  box-sizing: border-box;
  padding: 40rpx 0
}
.price>text:nth-of-type(1){
  font-size: 24rpx;
  margin-right: 14rpx
}
.price>text:nth-of-type(2){
  font-size: 44rpx;
  font-weight: 700
}
.collect{
  width: 48rpx;
  height: 46rpx
}
.product>.producttitle{
  font-size: 32rpx;
  font-weight: 700;
  color: rgb(51, 51, 51);
  margin-bottom: 30rpx
}
.product>.productdiscribe{
  font-size: 28rpx;
  font-weight: 400;
  color: rgb(51, 51, 51)
}

.product>.productswiper{
  width: 100%;
  height: 760rpx;
  padding: 30rpx 0 10rpx
}
.productswiper>swiper{
  height: 100%
}
.swiper-image{
  width: 100%;
  height: 690rpx;
  border-radius: 10rpx
}


.relation{
  margin-top: 16rpx;
  padding: 0 30rpx;
  background: #fff
}
.relation_address{
  height: 114rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(231, 231, 231);
  font-size: 32rpx;
}
.relation_address>text:nth-of-type(1),.relation_phone>.relation_phone_wrap>text:nth-of-type(1){
  color: rgb(153, 153, 153);
  margin-right: 40rpx
}
.relation_address>text:nth-of-type(2),.relation_phone>.relation_phone_wrap>text:nth-of-type(2){
  color: rgb(51, 51, 51)
}
.relation_phone{
  height: 114rpx;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.relation_phone>.relation_phone_btn{
  width: 180rpx;
  height: 68rpx;
  text-align: center;
  line-height: 68rpx;
  border-radius: 10rpx;
  color:rgb(223, 37, 12);
  border: 1px solid rgb(231, 231, 231);
}