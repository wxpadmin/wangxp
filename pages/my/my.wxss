/* pages/my/my.wxss */
page{
  background-color:#f5f5f5;
}
.wrap{
  width: 100%
}

/* 用户信息 */
.islogin{
  display: flex;
  align-items: center;
  padding:30rpx;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: red;
}
.user{
  display: flex;
  align-items: center;
}
.userAvatarUrl{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
}
.login{
  width: 100%;
  height: 100rpx;
  background-color: greenyellow;
  text-align: center;
  line-height: 100rpx;
  color: #fff
}


.arrow{
  width: 25rpx;
  height: 30rpx
}

/* tabbar */
.tabbar{
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 30rpx 0;
  font-size: 30rpx;
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;
  font-size: 25rpx
}
.tabbarflexwrap{
  display: flex;
  flex-direction: column;
  align-items: center;  
}
.tabbar image{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx
}




/* 功能 */
.func{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
}
.funccontent{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.funccontent:last-child{
  border: none
}


.flexbox{
  font-size: 25rpx;
  height: 100%;
  display: flex;
  align-items: center;
  font-weight: 700
}

.partner,.reputation{
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx
}