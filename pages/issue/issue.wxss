.wrap{
  width: 100%
}
.header{
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  background: rgb(254, 252, 215);
  font-size: 26rpx;
  color: rgb(243, 103, 34)
}


/* 商品标题 */
.title{
  width: 100%;
  padding: 28rpx 32rpx 40rpx;
  box-sizing: border-box 
}
.title>input{
  font-size: 32rpx
}


/* 商品描述 */
.discribe{
  width: 100%;
  padding-left: 42rpx;
  box-sizing: border-box;
  padding-bottom: 96rpx;
}
.discribe>textarea{
  font-size: 28rpx;
  max-height: 130rpx
}

/* 添加图片 */
.addimage{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap : wrap;
  margin-bottom: 80rpx;
}

.deleteImg:nth-of-type(3n-1){
  margin-right: 50rpx;
}
.deleteImg:nth-of-type(3n-2){
  margin-right: 50rpx;
}

.deleteImg{
  width: 196rpx;
  height: 196rpx;
  display: flex;
  margin-bottom: 30rpx;
  position: relative
}
.add{
  width: 196rpx;
  height: 196rpx;
  flex-shrink : 0
}
.deletewrap{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.7);
  flex-shrink : 0
}
.deletewrap>image{
  width: 14rpx;
  height: 14rpx;
  position: absolute;
  top: 8rpx;
  right: 8rpx
}
.addimagebg{
  width: 196rpx;
  height: 196rpx;
  flex-shrink : 0;
  background: rgb(241, 241, 241);
  display: flex;
  justify-content: center;
  align-items: center
}
.addimagebg>image{
  width: 64rpx;
  height: 64rpx
}


/* 店铺地址 */
.address{
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box
}
.addresswrap{
  width: 100%;
  padding-bottom: 34rpx;
  border-bottom: 1rpx solid rgb(231, 231, 231)
}
.addresswrap>image{
  width: 206rpx;
  height: 48rpx;
  display: block
}
.addresswrap>text{
  font-size: 30rpx
}
.chooseadd{
  height: 48rpx;
  display: inline-block;
  background: rgb(247, 247, 247);
  border: 1rpx solid rgb(231, 231, 231);
  border-radius: 20rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
}
.chooseadd>image{
  width: 24rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
  height: 100%;
  margin-right: 18rpx;
  float: left
}
.chooseadd>view{
  height: 48rpx;
  line-height: 47rpx;
  margin-right: 42rpx;
  font-size: 26rpx;
  color: rgb(13,102,154);
  font-family: PingFang;
  float: left
}
.chooseadd>.deleteaddress{
  width: 14rpx;
  margin-right: 20rpx;
  padding: 16rpx 0;
  box-sizing: border-box;
  height: 100%;
}






/* 详细信息 */
.detail{
  width: 100%;
  padding: 0 32rpx;
  box-sizing: border-box
}
.detail>view{
  width: 100%;
  border-bottom: 1rpx solid rgb(231, 231, 231);
  height: 114rpx
}
.classify,.price{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.leftside,.rightside{
  height: 100%;
  display: flex;
  align-items: center
}
.leftside>image{
  height: 34rpx;
  width: 34rpx;
  margin-right: 26rpx
}
.leftside>text{
  font-size: 40rpx;
  color: rgb(51, 51, 51)
}
.choosetype{
  font-size: 32rpx;
  color: rgb(223, 37, 12);
  vertical-align: middle
}
.choosetypearrow{
  width: 17rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 15rpx
}


.minprice,.maxprice{
  width: 196rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
}
.minprice>text,.maxprice>text{
  font-size: 32rpx;
  font-weight: 700
}
.minprice>input,.maxprice>input{
  font-size: 42rpx;
  font-weight: 700
}

.priceicon{
  margin: 0 24rpx
}

.notchangeprice {
  background: rgb(247, 247, 247);
  border: 1rpx solid rgb(231, 231, 231)
}
.notchangeprice>text{
  color: black
}
.notchangeprice>input{
  color: black
}

.changeprice {
  background: rgb(253, 237, 235);
  border: 1rpx solid rgb(243, 103, 34)
}
.changeprice>text{
  color: rgb(223, 37, 12);
}
.changeprice>input{
  color: rgb(223, 37, 12);
}