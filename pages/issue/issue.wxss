page{
  background-color: #ccc
}
.header{
  width: 100%;
  height: 80rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  background-color: #fff
}
.header input{
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  color: black

}
.headerinput{
  color: #ccc;
  font-size: 30rpx
}


.direction{
  background-color: #fff;
  width: 100%;
  padding: 30rpx 30rpx 10rpx;
  box-sizing: border-box;
}
.direction image{
  display: block
}
.direction textarea{
  width: 100%;
}
.add_image,.deleteImg{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  position: relative
}
.add_image>.deleteImg:not(:last-child)>image:nth-of-type(1){
  margin-right: 30rpx;
  box-sizing: border-box
}
.image02{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -20rpx;
  right: 10rpx
}
.add_image>.deleteImg:last-child>image:nth-of-type(2){
  top: -20rpx;
  right: -15rpx
}


.add{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx !important
}
.place{
  width: 50rpx;
  height: 50rpx;
  margin-top: 60rpx
}

.type{
  width: 100%;
  margin-top: 30rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box
}
.type_item_wrap{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx
}

.type_item_wrap:last-child{
  border-bottom: none
}


.imgList{
  width: 100%;
}
