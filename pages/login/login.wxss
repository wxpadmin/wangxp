/* pages/login/login.wxss */

.wrap{
  width: 100%;
}
.header{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center
}

.header>view{
  flex-grow : 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.clickstyle {
  background-color: blue
}

.content{
  width: 100%;
  box-sizing: border-box;
  padding: 50rpx;
}
input{
  height: 100rpx
}
.placeholderstyle{
  color: #ccc
}

.codewrap{
  display: flex;
  width: 100%;
  height: 100rpx;
  align-items: center
}

.codewrap>view{
  border: 1rpx solid red;
  padding: 10rpx 20rpx;
  border-radius: 10rpx
}


button{
  margin-top: 30rpx
}


.bottom{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box
}

.bottom>view{
  color: blue
}