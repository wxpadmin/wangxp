page{
  height: 100%
}
.wrap{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
}

.hint{
  width: 600rpx;
  background-color: #fff;
  position: absolute;
  top: 300rpx;
  right: 0;
  left: 0;
  margin: 0 auto;
  border-radius: 10rpx
}

.hinttitle{
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  display: block;
  font-size: 40rpx;
}

.hintcontent{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  text-align: center;
  color: #ccc;
  border-bottom: 1rpx solid #ccc;
}

.btn{
  width: 100%;
  height: 100rpx;
  color: green;
  display: flex;
  align-items: center;
}
.btn>view{
  flex-grow: 1;
  text-align: center
}